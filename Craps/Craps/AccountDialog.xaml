<Window x:Name="windowAccountDialog" x:Class="Craps.WindowAccountDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Craps"
        mc:Ignorable="d"
        Title="Account Dialog" Height="134.293" Width="300" WindowStartupLocation="CenterScreen" Closing="windowAccountDialog_Closing">
    <Grid>
        <CheckBox x:Name="checkBoxBets" Content="Place bets?" HorizontalAlignment="Left" Margin="102,10,0,0" VerticalAlignment="Top" Click="checkBoxBets_Click"/>
        <Label x:Name="labelAccount" Content="Initial Account Balance  $" HorizontalAlignment="Left" Margin="10,30,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="textBoxAccount" HorizontalAlignment="Left" Height="23" Margin="153,34,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="128" IsEnabled="False"/>
        <Button x:Name="buttonStart" Content="Start Game" HorizontalAlignment="Left" Margin="106,73,0,0" VerticalAlignment="Top" Width="75" Click="buttonStart_Click"/>

    </Grid>
</Window>
